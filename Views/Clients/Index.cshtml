@{
    Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h1>Clients</h1>

@if (Model.Count == 0)
{
    <h3> No Clients here </h3>
}

@foreach (Client client in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <p class="card-text">
                Name: @($"{client.Name}") <br> Stylist: @client.Stylist.Name
            </p>
            @Html.ActionLink("Delete this client", "Delete", new {id = @Model.ClientId})
        </div>
    </div>
}