@{
    Layout = "_Layout";
}


@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;


@if(@Model.Count == 0)
{
    <h1>Currently no stylists. Please add one!</h1>
}

@foreach (Stylist stylist in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <p class="card-text">
            Name: @Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.Id }) <br> Price: $@stylist.Price
            </p>
        </div>
    </div>
}    



<a href="stylists/create">Add a Stylist!</a>
